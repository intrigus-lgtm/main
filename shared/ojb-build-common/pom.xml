<?xml version="1.0"?>
<!--
  Test CI build failure (no license comment)
-->
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <!-- Note Not setting parent to ojb main root pom, to avoic cyclic issue -->

  <groupId>org.ojbc.build</groupId>
  <artifactId>ojb-build-common</artifactId>
  <version>1.0.0</version>

  <name>ojb-build-common</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <build>

    <!-- Hack: Duplicate declaration of plugin - instead of inheriting from
        root pom, to prevent cyclic dependency -->
    <plugins>
      <plugin>
        <groupId>com.mycila</groupId>
        <artifactId>license-maven-plugin</artifactId>
        <version>2.9</version>

        <configuration>
          <!-- Reference license on plugin classpath -->
          <header>src/main/resources/ojb-license.txt</header>
          <includes>
            <include>**/*.java</include>
            <include>**/*.xml</include>
            <include>**/*.xslt</include>
            <include>**/*.xsd</include>
            <include>**/*.wsdl</include>
            <include>**/*.xsl</include>
            <include>**/*.xslt</include>
            <include>**/*.vm</include>
            <include>**/*.html</include>
            <include>**/*.js</include>
          </includes>
          <mapping>
            <java>SLASHSTAR_STYLE</java>
            <wsdl>XML_STYLE</wsdl>
            <xslt>XML_STYLE</xslt>
          </mapping>
        </configuration>

      </plugin>
    </plugins>
  </build>


</project>
