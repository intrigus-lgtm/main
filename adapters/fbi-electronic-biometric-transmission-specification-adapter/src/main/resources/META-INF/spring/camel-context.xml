<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cxf="http://camel.apache.org/schema/cxf"
	xmlns:ctx="http://www.springframework.org/schema/context" xmlns:camel="http://camel.apache.org/schema/spring"
	xmlns:exchange="http://ojbc.org/IEPD/Exchange/DispositionReport/1.0"
	xmlns:ext="http://ojbc.org/IEPD/Extensions/DispositionReportExtension/1.0"
	xmlns:nc="http://release.niem.gov/niem/niem-core/3.0/"
	xsi:schemaLocation="
	   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
	   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- needed cxf imports -->
	<import resource="classpath:META-INF/cxf/cxf.xml" />	
	<import resource="properties-context.xml"/>
	<import resource="cxf-endpoints.xml"/>	
	

	<camel:camelContext xmlns="http://camel.apache.org/schema/spring"
		id="fbi-electronic-biometric-transmission-specification-adapter">

		<endpoint id="fbiEbtsServiceEndpoint"
			uri="cxf:bean:fbiEbtsService?dataFormat=PAYLOAD&amp;loggingFeatureEnabled=${fbiEbtsAdapter.cxflogging}" />

		<camel:route id="fbiEbtsServiceRoute">

			<camel:from uri="fbiEbtsServiceEndpoint" />

			<camel:to uri="bean:messageProcessor?method=processRequestPayload" />

			<camel:log message="Inbound Message: ${body}" loggingLevel="DEBUG" />

			<camel:convertBodyTo type="java.lang.String" />
						
			<setHeader headerName="rapBackTransactionDate"><constant></constant></setHeader>
			<setHeader headerName="rapBackNotificatonFormat"><constant>${fbiEbtsAdapter.rapBackNotificatonFormat}</constant></setHeader>
			<setHeader headerName="recordRapBackCategoryCode"><constant>${fbiEbtsAdapter.recordRapBackCategoryCode}</constant></setHeader>
			<setHeader headerName="recordRapBackExpirationDate"><constant>${fbiEbtsAdapter.recordRapBackExpirationDate}</constant></setHeader>			
			<setHeader headerName="rapBackInStateOptOutIndicator"><constant>${fbiEbtsAdapter.rapBackInStateOptOutIndicator}</constant></setHeader>
			<setHeader headerName="rapBackTriggeringEvent"><constant>${fbiEbtsAdapter.rapBackTriggeringEvent}</constant></setHeader>			
						
			<camel:to uri="xslt:xsl/ojbSubscriptionToEBTS.xsl" />

		</camel:route>

	</camel:camelContext>

	<bean id="messageProcessor" class="org.ojbc.util.camel.processor.MessageProcessor" />

</beans>
