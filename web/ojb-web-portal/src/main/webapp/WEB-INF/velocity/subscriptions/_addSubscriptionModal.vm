	<form id="subscriptionForm">  	  
		<div>
			#springFormSingleSelect("subscription.subscriptionType" $subscriptionTypeValueToLabelMap "onChange='refreshDisplayFromSubType()'")		
		</div>			
		
		<div id="subModalDynamicContents"/>	 	    	        
	</form>
</div>
  
