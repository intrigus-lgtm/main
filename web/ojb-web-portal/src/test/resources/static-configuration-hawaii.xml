<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
						http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd">

	<bean id="driverLicenseExtractor" class="org.ojbc.web.portal.controllers.simpleSearchExtractors.DriverLicenseExtractor">
		<property name="driversLicenseRegex" value="([a-zA-Z]{2})-(.+)|([Hh][0-9]{8})"/>	
		<property name="defaultStateOfIssue" value="HI"/>
	</bean>
	
	<bean id="simpleSearchParser" class="org.ojbc.web.portal.controllers.helpers.SimpleSearchParser">
		<property name="driverLicenseExtractor" ref="driverLicenseExtractor"/>
	</bean>
	
	<bean id="searchTermsTokenizer" class="org.ojbc.web.portal.services.SearchTermsTokenizer"/>
	
	
	<bean id="currentUneditableStartDateStrategy" class="org.ojbc.web.model.subscription.add.CurrentUneditableStartDateStrategy" />
	
	<bean id="currentEditableStartDateStrategy" class="org.ojbc.web.model.subscription.add.CurrentEditableStartDateStrategy" />
		
	<bean id="blankEditableEndDateStrategy" class="org.ojbc.web.model.subscription.add.BlankEditableEndDateStrategy" />	
	
	<bean id="uneditableStartDateStrategy" class="org.ojbc.web.model.subscription.edit.UneditableStartDateStrategy" />
	
	
	
	<util:map id="subscriptionEndDateStrategyMap">	
		<entry key="{http://ojbc.org/wsn/topics}:person/arrest" value-ref="blankEditableEndDateStrategy"/>		
		<entry key="{http://ojbc.org/wsn/topics}:person/incident" value-ref="blankEditableEndDateStrategy"/>		
	</util:map>
	
	<util:map id="subscriptionStartDateStrategyMap">	
		<entry key="{http://ojbc.org/wsn/topics}:person/arrest" value-ref="currentUneditableStartDateStrategy"/>		
		<entry key="{http://ojbc.org/wsn/topics}:person/incident" value-ref="currentEditableStartDateStrategy"/>		
	</util:map>	
	
	
	
			
	<util:map id="editSubscriptionStartDateStrategyMap">	
		<entry key="{http://ojbc.org/wsn/topics}:person/arrest" value-ref="uneditableStartDateStrategy"/>	
		<entry key="{http://ojbc.org/wsn/topics}:person/incident" value-ref="uneditableStartDateStrategy"/>		
	</util:map>		
	
	
	
	<util:map id="searchProfilesEnabled" map-class="java.util.LinkedHashMap">
		<!-- Valid values are 'enabled', 'disabled' and 'hidden' -->
		<!-- 'enabled': clicking tab shows search form -->
		<!-- 'disabled': clicking tab shows "Coming Soon" page  -->
		<!-- 'hidden': tab not visible  -->
		<entry key="people" value="enabled" />
		<entry key="incident" value="hidden" />
		<entry key="vehicle" value="hidden" />
		<entry key="firearm" value="enabled" />
	</util:map>
	
	<util:map id="searchPurposes">
		<entry key="" value="Purpose"/>
		<entry key="Administrative File Maintenance (A)" value="Administrative File Maintenance (A)"/>
		<entry key="Criminal Justice (C)" value="Criminal Justice (C)"/>
		<entry key="Domestic Violence and Stalking (D)" value="Domestic Violence and Stalking (D)"/>
		<entry key="Weapons-Related Background Checks (F)" value="Weapons-Related Background Checks (F)"/>
		<entry key="Housing (H)" value="Housing (H)"/>
		<entry key="Interstate-Approved Noncriminal Justice (I)" value="Interstate-Approved Noncriminal Justice (I)"/>
		<entry key="Criminal Justice Employment (J)" value="Criminal Justice Employment (J)"/>
		<entry key="National Security (S)" value="National Security (S)"/>
		<entry key="Exigent Procedures (X)" value="Exigent Procedures (X)"/>
	</util:map>
	
	<util:map id="systemsToQuery_people" map-class="java.util.LinkedHashMap">
		<entry key="Criminal History" value="{http://ojbc.org/Services/WSDL/Person_Search_Request_Service/Criminal_History/1.0}Submit-Person-Search---Criminal-History" />
		<entry key="Warrants" value="{http://ojbc.org/Services/WSDL/Person_Search_Request_Service/Warrants/1.0}Submit-Person-Search---Warrants" />
