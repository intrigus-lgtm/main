	<!-- This map is used to map the search details ('DETAILS' link) to the xsl that will transfrom the data to html.  Format is System Name to file name in the src/main/resources/xsl directory -->
    <util:map id="searchDetailToXsl" >
        <entry key="Warrants" value="warrants.xsl" />
        <entry key="Criminal History" value="criminalhistory.xsl" />
        <entry key="Firearm Reg." value="firearm-details.xsl" />
        <entry key="Maui County" value="firearm-details.xsl" />
    </util:map>
    
    <!-- This map is used to allow conditional includes into the Velocity templates based upon state-specific needs.
    For example, if the value is non-empty for 'preBodyClose', the filename it specifies (relative to "stateSpecific" directory)
    will be sourced in before the </body> tag.  -->
    <util:map id="stateSpecificIncludes">
    	<entry key="preBodyClose" value="tracker/HIJIS_Tracker.js" />
    </util:map>
    
    <!-- This map will decide which base template is used as the 'home' page 
    landingPage
    query
    -->
    <util:map id="stateSpecificHomePage">
      <entry key="thisHomePage" value="landingPage" />
    </util:map>

